@model PropietarioModel
@{
    ViewData["Title"] = "EliminarPropietario";
    Layout = "~/Views/Shared/auxiliar/_Layout.cshtml";
}



<div class="card">
    <div class="card-header">
    </div>
    <div class="card-body">

        <form asp-action="EliminarPropietario" asp-controller="Auxiliar" method="post">

            <input asp-for="id_Persona" type="hidden" class="form-control">

            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar el propietario @Html.DisplayTextFor(m => m.Nombre) @Html.DisplayTextFor(m => m.Apellido)?
            </div>

            <div class="containerBtnForm">
                <button type="submit" class="btnBuscarPlaca">ELIMINAR</button>
            </div>
            <div class="containerBtnForm">
                <a asp-action="ListarPropietario" asp-controller="Auxiliar" class="btn btn-warning">Volver a la lista</a>
            </div>

        </form>
    </div>
</div>


