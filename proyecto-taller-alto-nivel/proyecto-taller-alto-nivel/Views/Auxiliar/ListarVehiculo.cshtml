@model List<VehiculoModel>
@{
    ViewData["Title"] = "ListarVehiculo";
    Layout = "~/Views/Shared/auxiliar/_Layout.cshtml";
}
<div class=ContainerListaVehiculos>
 
    <div class="TituloListarVehiculos">
        LISTADO GENERAL DE VEHICULOS
    </div>
        
        <div class="card-body">
        
                <table class="listaVehiculos">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Placa</th>
                            <th>Tipo</th>
                            <th>Marca</th>
                            <th>Modelo</th>
                            <th>Capacidad</th>
                            <th>Seguro</th>
                            <th>Propietario</th>
                            <th>Revision</th>
                            <th>Estado</th>
                            <th></th>
                         </tr>
                    </thead>
   
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.id_Vehiculo</td>
                                <td>@item.Licencia</td>
                                <td>@item.Tipo</td>
                                <td>@item.Marca</td>
                                <td>@item.Modelo</td>
                                <td>@item.Capacidad</td>
                                <td>SOAT 2021</td>
                                <td>@item.id_Propietario</td>
                                <td>Jorge Rodriguez</td>
                                <td><a asp-action="EditarVehiculo" asp-controller="Auxiliar" class="btnEditarVehiculo" asp-route-IdPersona="@item.id_Vehiculo">Ver</a></td>
                                <td><a asp-action="EliminarVehiculo" asp-controller="Auxiliar" class="btnEliminarVehiculo" asp-route-IdPersona="@item.id_Vehiculo">Eliminar</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
        <a asp-action="GuardarVehiculo" asp-controller="Auxiliar" class="btnCrearNuevo"><i class="bi bi-plus-circle"></i> Crear Nuevo</a>
        </div>      

</div>

