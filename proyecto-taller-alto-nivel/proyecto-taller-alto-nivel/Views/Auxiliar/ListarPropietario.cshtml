@model List<PropietarioModel>
@{
    ViewData["Title"] = "ListarPropietario";
    Layout = "~/Views/Shared/auxiliar/_Layout.cshtml";
}


<div class="containerMainLista">

    <div class="TituloListarVehiculos">
        LISTADO GENERAL DE PROPIETARIOS
    </div>

    <div class="card-body containerTable">

        <table class="listaVehiculos2">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>NOMBRE</th>
                    <th>APELLIDO</th>
                    <th>IDENTIFICACION</th>
                    <th>NACIMIENTO</th>
                    <th>CIUDAD</th>
                    <th>CORREO</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.id_Persona</td>
                        <td>@item.Nombre</td>
                        <td>@item.Apellido</td>
                        <td>@item.Identificacion</td>
                        <td>@item.Nacimiento</td>
                        <td>@item.Ciudad</td>
                        <td>@item.Correo</td>
                        
                        
                        
                        <td><a asp-action="EditarPropietario" asp-controller="Auxiliar" class="btnEditarVehiculo" asp-route-id_Persona="@item.id_Persona">Editar</a></td>
                        <td><a asp-action="EliminarPropietario" asp-controller="Auxiliar" class="btnEliminarVehiculo" asp-route-id_Persona="@item.id_Persona">Eliminar</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-action="GuardarPropietario" asp-controller="Auxiliar" class="btnCrearNuevo">CREAR NUEVO</a>
    </div>

</div>
